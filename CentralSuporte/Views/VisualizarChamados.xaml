<Page x:Class="CentralSuporte.Views.VisualizarChamados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wpfui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      xmlns:local="clr-namespace:CentralSuporte.Views"
      mc:Ignorable="d"
      Title="VisualizarChamados">

    <StackPanel Margin="20" HorizontalAlignment="Stretch">

        <!-- Botão -->
        <wpfui:Button Content="Abrir Chamado"
                      Command="{Binding AbrirTelaCriarNovoChamadoCommand}"
                      Width="160"
                      Height="40"
                      HorizontalAlignment="Left"
                      Appearance="Primary"
                      Margin="0,0,0,10" />

        <!-- Grade com os chamados -->
        <wpfui:Card Padding="10">
            <Grid>
                <DataGrid x:Name="dgvChamados"
                          ItemsSource="{Binding Chamados}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          Margin="0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          RowHeaderWidth="0"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          AlternatingRowBackground="LightGray"
                          BorderThickness="0"/>
            </Grid>
        </wpfui:Card>
    </StackPanel>
</Page>
