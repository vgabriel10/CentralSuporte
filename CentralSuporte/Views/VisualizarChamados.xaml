<Page x:Class="CentralSuporte.Views.VisualizarChamados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CentralSuporte.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizarChamados">

    <Grid>

        <StackPanel Margin="0,10,0,0">
            <Button  Content="Abrir chamado" IsEnabled="True"  Command="{Binding AbrirTelaCriarNovoChamadoCommand}" />
        </StackPanel>
        <StackPanel>


            <StackPanel Margin="0,50,0,0">
                <DataGrid  x:Name="dgvChamados" HorizontalAlignment="Center" ItemsSource="{Binding Chamados}"/>
            </StackPanel>

        </StackPanel>


    </Grid>
</Page>
