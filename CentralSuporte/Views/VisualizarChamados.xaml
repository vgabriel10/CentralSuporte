<Page x:Class="CentralSuporte.Views.VisualizarChamados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CentralSuporte.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizarChamados">

    <Grid>

        <StackPanel>
            
        
            <StackPanel Margin="10">
                <DataGrid  x:Name="dgvChamados" HorizontalAlignment="Center" ItemsSource="{Binding Chamados}"/>
            </StackPanel>

            <StackPanel Margin="0,170,0,0">
                <Button  Content="Abrir chamado" IsEnabled="True"  Command="{Binding AbrirChamadoCommand}" />
                <TextBox Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>
                <TextBox Text="{Binding Descricao, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>
                <TextBox Text="{Binding Cargo, UpdateSourceTrigger=PropertyChanged}"  Margin="0 5"/>
                <TextBox Text="{Binding Responsavel, UpdateSourceTrigger=PropertyChanged}"  Margin="0 5"/>
            </StackPanel>

        </StackPanel>


    </Grid>
</Page>
