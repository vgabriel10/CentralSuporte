<Window
    x:Class="CentralSuporte.Views.CadastrarNovoUsuario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    xmlns:vm="clr-namespace:CentralSuporte.ViewModels"
    xmlns:local="clr-namespace:CentralSuporte.Views"
    xmlns:helpers="clr-namespace:CentralSuporte.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:CentralSuporte.Behaviors"
    Title="Cadastrar Novo Usuário"
    Width="400"
    Height="400"
    WindowStartupLocation="CenterScreen">


    <Grid Margin="20" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nome -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Nome:" Margin="0,0,0,5" />
            <ui:TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Behaviors>
                    <behaviors:BloquearEspacoBehavior />
                </i:Interaction.Behaviors>
            </ui:TextBox>
        </StackPanel>

        <!-- Senha -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Senha:" Margin="0,0,0,5" />
            <PasswordBox
            Height="40"
            helpers:PasswordBoxHelper.BoundPassword="{Binding Senha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!-- Tipo de Usuário -->
        <StackPanel Grid.Row="2" Margin="0 0 0 10">
            <TextBlock Text="Tipo de Usuário:" />
            <ComboBox Height="60" ItemsSource="{Binding TiposUsuarios}"
                         SelectedItem="{Binding TipoUsuario}"/>

        </StackPanel>



        <!-- Botão -->
        <ui:Button Grid.Row="4"
                   Content="Cadastrar"
                   Command="{Binding CriarUsuarioCommand}"
                   Width="120"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
