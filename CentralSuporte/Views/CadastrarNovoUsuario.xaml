<Window
    x:Class="CentralSuporte.Views.CadastrarNovoUsuario"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    xmlns:vm="clr-namespace:CentralSuporte.ViewModels"
    xmlns:local="clr-namespace:CentralSuporte.Views"
    xmlns:helpers="clr-namespace:CentralSuporte.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:CentralSuporte.Behaviors"
    Title="Cadastrar Novo Usuário"
    Width="400"
    Height="500"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">

    <Grid>
        <Border
            CornerRadius="12"
            Padding="30"
            Width="340"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

                <TextBlock Text="Criar conta"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <StackPanel>
                    <TextBlock Text="Nome de usuário" FontSize="12" Margin="2,0,0,2"/>
                    <ui:TextBox PlaceholderText="Digite o nome de usuário"
                                Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Behaviors>
                            <behaviors:BloquearEspacoBehavior />
                        </i:Interaction.Behaviors>
                    </ui:TextBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Senha" FontSize="12" Margin="2,0,0,2"/>
                    <PasswordBox
                        Height="40"
                        helpers:PasswordBoxHelper.BoundPassword="{Binding Senha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Cargo" FontSize="12" Margin="2,0,0,2"/>
                    <ui:TextBox PlaceholderText="Digite o seu cargo"
                    Text="{Binding Cargo, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Behaviors>
                            <behaviors:BloquearEspacoBehavior />
                        </i:Interaction.Behaviors>
                    </ui:TextBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Tipo de usuário" FontSize="12" Margin="2,0,0,2"/>
                    <ComboBox ItemsSource="{Binding TiposUsuarios}"
                                 SelectedItem="{Binding TipoUsuario}"
                                 Height="40"/>
                </StackPanel>

                <ui:Button Content="Cadastrar"
                           Command="{Binding CriarUsuarioCommand}"
                           Appearance="Primary"
                           Margin="0,10,0,0"
                           Height="40"/>
            </StackPanel>
        </Border>
        <ui:SnackbarPresenter x:Name="SnackbarPresenter"/>
    </Grid>
</Window>
