<Page
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentralSuporte.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="CentralSuporte.Views.Login"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Cursor="IBeam">

        <TextBox x:Name="txtUsuario" Text="" Margin="255,199,345,150"/>

        <ui:PasswordBox x:Name="txtSenha" Margin="255,316,345,0" TextWrapping="Wrap" Text="" RenderTransformOrigin="0.5,0.5" Cursor="IBeam" VerticalAlignment="Top" Height="45">
            <ui:PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.323"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.31"/>
                </TransformGroup>
            </ui:PasswordBox.RenderTransform>
        </ui:PasswordBox>
        <!--<ui:TextBox Margin="285,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" Height="35" BorderBrush="Black" Cursor="IBeam" Background="#B3FFFFFF" HorizontalAlignment="Left"/>-->




        <Ellipse HorizontalAlignment="Left" Height="100" Margin="305,69,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        <Label Content="Usuário" HorizontalAlignment="Left" Margin="330,179,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.381,0.886" Background="#00000000" Foreground="#FF0C0B0B"/>
        <Label Content="Senha" HorizontalAlignment="Left" Margin="330,295,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.381,0.886" Cursor="IBeam" Foreground="Black"/>
        <ui:Button x:Name="btnEntrar" Content="Entrar" Margin="319,379,0,0" VerticalAlignment="Top" Click="btnEntrar_Click"/>

    </Grid>
</Page>
