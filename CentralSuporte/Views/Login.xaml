<Window
    x:Class="CentralSuporte.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:CentralSuporte.Behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="clr-namespace:CentralSuporte.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="Login"
    MaxHeight="700"
    MaxWidth="700"
    Background="#f0f2f5"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    AllowsTransparency="True">

    <Grid>

        <Button Content="✕"
                Width="30"
                Height="30"
                FontSize="14"
                FontWeight="Bold"
                Background="Transparent"
                Foreground="#555"
                BorderBrush="{x:Null}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Cursor="Hand"
                Command="{Binding FecharAplicacaoCommand}"/>

        <Border
            Width="400"
            Padding="40"
            CornerRadius="12"
            Background="White"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Bem-vindo de volta!"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <StackPanel Margin="0,10,0,0">
                    <Label Content="Nome de usuário" Foreground="#555" />
                    <TextBox x:Name="txtNomeUsuario"
                             Text="{Binding Nome}"
                             Height="40"
                             FontSize="14"
                             Padding="8"
                             Background="#f5f5f5"
                             BorderBrush="#ccc"
                             BorderThickness="1"
                             Margin="0,5,0,0">
                        <i:Interaction.Behaviors>
                            <behaviors:BloquearEspacoBehavior />
                        </i:Interaction.Behaviors>
                    </TextBox>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <Label Content="Senha" Foreground="#555" />
                    <PasswordBox
                        Height="40"
                        FontSize="14"
                        Padding="8"
                        Background="#f5f5f5"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        helpers:PasswordBoxHelper.BoundPassword="{Binding Senha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <Button x:Name="btnCadastrarUsuario"
                        Content="Entrar"
                        Command="{Binding FazerLoginCommand}"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        Margin="0,20,0,0"
                        BorderBrush="{x:Null}"
                        Cursor="Hand"
                        BorderThickness="0" />

                <Button x:Name="btnCriarConta"
                        Content="Criar conta"
                        Command="{Binding AbrirTelaCriarNovoUsuarioCommand}"
                        Background="Transparent"
                        Foreground="#0078D7"
                        BorderBrush="{x:Null}"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0" />
            </StackPanel>
        </Border>

        <ui:SnackbarPresenter x:Name="SnackbarPresenter"/>
    </Grid>
</Window>
