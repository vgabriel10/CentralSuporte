<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CentralSuporte.Views"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="CentralSuporte.Views.AbrirChamado"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AbrirChamado">

    <Grid>
        <StackPanel Margin="0,10,0,0">
            <!--<Button  Content="Abrir chamado" IsEnabled="True"  Command="{Binding AbrirChamadoCommand}" />-->
            <Label Content="Título:"/>
            <TextBox Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>
            <Label Content="Descrição:"/>
            <TextBox Text="{Binding Descricao, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>
            <Label Content="Cargo:"/>
            <TextBox Text="{Binding Cargo, UpdateSourceTrigger=PropertyChanged}"  Margin="0 5"/>
            <Label Content="Responsável:"/>
            <!--<TextBox Text="{Binding Responsavel, UpdateSourceTrigger=PropertyChanged}"  Margin="0 5"/>-->
            <Button  Content="Abrir chamado" IsEnabled="True"  Command="{Binding AbrirChamadoCommand}" />
        </StackPanel>
    </Grid>
</Page>
