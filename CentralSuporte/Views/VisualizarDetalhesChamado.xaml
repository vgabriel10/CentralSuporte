<Page x:Class="CentralSuporte.Views.VisualizarDetalhesChamado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CentralSuporte.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizarDetalhesChamado">

    <Grid>
        <DataGrid  Grid.Row="0" 
              ItemsSource="{Binding Chamados}" 
              SelectedItem="{Binding ChamadoSelecionado, Mode=TwoWay}"
              AutoGenerateColumns="False"
              SelectionMode="Single"
              IsReadOnly="True"
              Margin="0,50,0,10">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Ações">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Visualizar"
                    Command="{Binding DataContext.ComandoVisualizar, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                    CommandParameter="{Binding}" 
                    Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Título" Binding="{Binding Titulo}"/>
                <DataGridTextColumn Header="Cargo" Binding="{Binding Cargo}"/>
                <DataGridTextColumn Header="Prioridade" Binding="{Binding Prioridade}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Responsável" Binding="{Binding Responsavel}"/>
                <DataGridTextColumn Header="Abertura" Binding="{Binding DataAbertura, StringFormat=dd/MM/yyyy}"/>
                <DataGridTextColumn Header="Fechamento" Binding="{Binding DataFechamento, StringFormat=dd/MM/yyyy}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
