<Page x:Class="CentralSuporte.Views.VisualizarDetalhesChamado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CentralSuporte.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizarDetalhesChamado">

    <Grid>
        <StackPanel Margin="0,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Título:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Chamado.Titulo}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Cargo:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Chamado.Cargo}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Prioridade:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Chamado.Prioridade}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Status:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding ListaStatus}"
                  DisplayMemberPath="Key"
                  SelectedValuePath="Value"
                  SelectedValue="{Binding Chamado.Status, Mode=TwoWay}"
                  Grid.Row="3" Grid.Column="1"
                  VerticalAlignment="Center"
                  Width="150"
                  Margin="0,0,500,0"/> 

                <TextBlock Text="Responsável:" FontWeight="Bold" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding UsuariosSuporte}"
                  SelectedValue="{Binding Chamado.Responsavel, Mode=TwoWay}"
                  Grid.Row="4" Grid.Column="1"
                  VerticalAlignment="Center"
                  Width="150"
                  Margin="0,0,500,0"/>  

                <TextBlock Text="Data Abertura:" FontWeight="Bold" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Chamado.DataAbertura, StringFormat=dd/MM/yyyy}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>

                <TextBlock Text="Data Fechamento:" FontWeight="Bold" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Chamado.DataFechamento, StringFormat=dd/MM/yyyy}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>

        <StackPanel Margin="110,200,0,0">
            <Button Content="Salvar" Command="{Binding SalvarDetalhesChamadoCommand}"/>
        </StackPanel>
        


        <!--<Grid Margin="0,200,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Atribuir responsável:" Grid.Column="0" VerticalAlignment="Center" Foreground="Black"/>
            <ComboBox Grid.Column="1" Width="200" Margin="0,0,400,0"/>
        </Grid>-->



    </Grid>
</Page>
