<Page x:Class="CentralSuporte.Views.VisualizarDetalhesChamado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CentralSuporte.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizarDetalhesChamado">

    <Grid>
        <StackPanel Margin="0,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Título:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Chamado.Titulo}" Grid.Row="0" Margin="100,0,0,0"/>

                <TextBlock Text="Cargo:" Grid.Row="1" FontWeight="Bold"/>
                <TextBlock Text="{Binding Chamado.Cargo}" Grid.Row="1" Margin="100,0,0,0"/>

                <TextBlock Text="Prioridade:" Grid.Row="2" FontWeight="Bold"/>
                <TextBlock Text="{Binding Chamado.Prioridade}" Grid.Row="2" Margin="100,0,0,0"/>

                <TextBlock Text="Status:" Grid.Row="3" FontWeight="Bold"/>
                <ComboBox Text="{Binding Chamado.Status}" Grid.Row="3" Margin="100,0,0,0"/>

                <TextBlock Text="Responsável:" Grid.Row="4" FontWeight="Bold"/>
                <TextBlock Text="{Binding Chamado.Responsavel}" Grid.Row="4" Margin="100,0,0,0"/>

                <TextBlock Text="Data Abertura:" Grid.Row="5" FontWeight="Bold"/>
                <TextBlock Text="{Binding Chamado.DataAbertura, StringFormat=dd/MM/yyyy}" Grid.Row="5" Margin="100,0,0,0"/>

                <TextBlock Text="Data Fechamento:" Grid.Row="6" FontWeight="Bold"/>
                <TextBlock Text="{Binding Chamado.DataFechamento, StringFormat=dd/MM/yyyy}" Grid.Row="6" Margin="100,0,0,0"/>
            </Grid>
        </StackPanel>
        
        <StackPanel Margin="0,300,0,0">
            <Label Content="Atribuir responsável:" />
        </StackPanel>
        <ComboBox />

    </Grid>
</Page>
