<Window
    x:Class="CentralSuporte.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainWindow" MinHeight="500" Width="800"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#EEE" Height="40">
            <Button Content="🔙 Voltar" Margin="5" Command="{Binding VoltarPaginaCommand}"/>
            <Button Content="🏠 Início" Margin="5" Command="{Binding AbrirTelaHomeCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Frame x:Name="main" NavigationUIVisibility="Hidden"/>
            <ui:SnackbarPresenter x:Name="SnackbarPresenter"/>
        </Grid>
    </Grid>
</Window>