<Window
    x:Class="CentralSuporte.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
        xmlns:views="clr-namespace:CentralSuporte.Views"
        Title="MainWindow" MinHeight="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#EEE" Height="40">
            <Button Content="🔙 Voltar" Margin="5" Command="{Binding VoltarPaginaCommand}"/>
            <Button Content="🏠 Início" Margin="5"  Command="{Binding MenuNavegacaoCommand}" CommandParameter="{x:Type views:GerenciarChamado}"/>
        </StackPanel>

        <Frame x:Name="main" NavigationUIVisibility="Hidden" />
    </DockPanel>

</Window>
